@model PEDS_XWFC.Models.Game
@{
    Layout = "~/Views/Templates/HomeLayout.cshtml";

    ViewBag.Title = "Live";
 }

<h2 class="text-center">En Vivo</h2>

<div class="container-fluid">
    <div class="row content">
        <div class="form-group">
            <div class="col-xs-2">
                <div class="table-responsive table-condensed">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            @Html.Raw(Model.viewTeam1)
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-xs-2">
                <div class="table-responsive table-condensed">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            @Html.Raw(Model.viewTeam2)
                        </tbody>
                    </table>
                </div>
            </div>
        </div>  
        <div class="col-xs-6">
            <div class="form-group">
                <h4>Narracion</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <tbody>
                            @Html.Raw(Model.Narration)
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
