
@{
    Layout = "~/Views/_Layout.cshtml";
}

<h1>X-FIFA World Cup</h1>

<form>
    @using (Html.BeginForm("ButtonLogIn", "LogIn", FormMethod.Post))
    {
        <div class="row">
            <div class="col-sm-3 col-md-6 col-lg-4">
                <label>@PEDS_XWFC.Properties.Resources.UserName</label>
                <input type="text" name="userName" class="form-control" placeholder=@PEDS_XWFC.Properties.Resources.UserName>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-3 col-md-6 col-lg-4">
                <label>@PEDS_XWFC.Properties.Resources.Password</label>
                <input type="password" name="password" class="form-control" placeholder=@PEDS_XWFC.Properties.Resources.Password>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary" formaction=@Url.Action("ButtonLogIn") formmethod="post">@PEDS_XWFC.Properties.Resources.LogIn</button>

            <button type="button" class="btn btn-default" onclick="location.href='@Url.Action("SignUp", "SignUp")'">@PEDS_XWFC.Properties.Resources.SignUp</button>
        </div>
        }


</form>