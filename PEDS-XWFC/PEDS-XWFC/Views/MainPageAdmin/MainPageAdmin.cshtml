@model PEDS_XWFC.Models.MainPageAdmin
@{
    Layout = "~/Views/Templates/HomeLayout.cshtml";
    ViewBag.Title = "Main Page";
}
<body data-spy="scroll" data-offset="15">
    <div class="container">
        <div class="row">
            <nav class="col-sm-2">
                <button style="margin-bottom:20px;" type="button" class="btn btn-primary" onclick="location.href='@Url.Action("NewTournament", "MainPageAdmin")'">Nuevo Torneo</button>
                <button style="margin-bottom:20px;" type="button" class="btn btn-primary">Nuevo Futbolista</button>
            </nav>
            <div class="col-sm-9">
                
                <div class="col-xs-4">
                    @Html.Label("Torneos")
                    @Html.DropDownListFor(m => m.Tournament.NameTournament,  new SelectList(Model.ListTournaments, "Value", "Text"),
                     htmlAttributes: new { @class = "list-inline  form-control", @size = "20", @formaction = @Url.Action("ViewCalendar") })
                    <button type="submit" formaction=@Url.Action("ViewCalendar", "MainPageAdmin") formmethod="post" style="visibility:hidden"></button>
                </div>
                <div class="col-xs-6">
                    <div class="form-group">
                        <h4>@PEDS_XWFC.Properties.Resources.Calendar @Html.Raw(Model.Tournament.NameTournament)</h4>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <tbody>
                                    @Html.Raw(Model.Calendar)
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


